{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Conan Install",
            "type": "shell",
            "command": "cd build && conan install ..",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure Debug",
            "type": "shell",
            "command": "cd build && cmake .. -DCMAKE_BUILD_TYPE=Debug -GNinja",
            "problemMatcher": []
        },
        {
            "label": "CMake Configure Release",
            "type": "shell",
            "command": "cd build && cmake .. -DCMAKE_BUILD_TYPE=Release -GNinja",
            "problemMatcher": []
        },
        {
            "label": "Compile",
            "type": "shell",
            "command": "cmake --build build/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "CTest",
            "type": "shell",
            "command": "ctest -C Release -T test --output-on-failure --timeout 10 --test-dir build/",
            "problemMatcher": [],
        },
        {
            "label": "Clear Build",
            "type": "shell",
            "command": "rm -rf build/*",
            "problemMatcher": []
        },
    ]
}